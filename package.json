{
  "name": "release-changelog-builder-action",
  "version": "1.0.0",
  "description": "A GitHub/Gitea action that builds release notes/changelog from PRs and commits, supporting multiple providers (GitHub, Gitea) with tag annotations and prefix/postfix messages",
  "private": true,
  "type": "commonjs",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "package": "npm run build && ncc build src/index.ts -o dist --source-map --license licenses.txt",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:unit": "jest --testPathIgnorePatterns='integration|e2e' --passWithNoTests",
    "test:integration": "jest --testPathPattern=integration --passWithNoTests",
    "test:e2e": "jest --testPathPattern=e2e --testTimeout=30000 --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci",
    "jest:version": "jest --version",
    "test:act": "act workflow_call -W .github/workflows/test.yml --eventpath .github/workflows/.act/event-workflow_call.json",
    "test:act:verbose": "act -W .github/workflows/test.yml --eventpath .github/workflows/.act/event-workflow_call.json -v",
    "test:act:ci": "act -W .github/workflows/ci.yml",
    "test:act:release": "act push --eventpath .github/workflows/.act/event-release.json",
    "lint:act": "act -W .github/workflows/ci.yml -j lint",
    "lint": "eslint src/**/*.ts --no-warn-ignored",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.ts\"",
    "format-check": "prettier --check \"src/**/*.ts\"",
    "prepare": "npm run build",
    "release:patch": "standard-version --release-as patch --skip.changelog && git push --follow-tags",
    "release:minor": "standard-version --release-as minor --skip.changelog && git push --follow-tags",
    "release:major": "standard-version --release-as major --skip.changelog && git push --follow-tags"
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^6.0.1",
    "@octokit/rest": "^22.0.1",
    "gitea-js": "^1.23.0",
    "moment": "^2.30.1",
    "semver": "^7.7.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "globals": "^15.14.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "@vercel/ncc": "^0.38.3",
    "eslint": "^9.17.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.0",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/LiquidLogicLabs/gitea-action-release-changelog-builder.git"
  },
  "keywords": [
    "actions",
    "changelog",
    "release-notes",
    "release",
    "gitea",
    "github",
    "multi-provider"
  ],
  "author": "ravenwolf.org",
  "license": "Apache-2.0"
}
