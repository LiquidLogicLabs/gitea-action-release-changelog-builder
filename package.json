{
  "name": "gitea-action-release-changelog-builder",
  "version": "0.1.0",
  "description": "A GitHub/Gitea action that builds release notes/changelog from PRs and commits, supporting multiple providers (GitHub, Gitea) with tag annotations and prefix/postfix messages",
  "private": true,
  "type": "commonjs",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "package": "npm run build && ncc build src/index.ts -o dist --source-map --license licenses.txt",
    "clean": "rm -rf dist",
    "lint": "eslint src/**/*.ts --no-warn-ignored",
    "format": "prettier --write \"src/**/*.ts\"",
    "format-check": "prettier --check \"src/**/*.ts\"",
    "prepare": "npm run build",
    "test": "jest",
    "test:ci": "jest --ci"
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^6.0.1",
    "@octokit/rest": "^22.0.1",
    "gitea-js": "^1.23.0",
    "moment": "^2.30.1",
    "semver": "^7.7.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "globals": "^15.14.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "@vercel/ncc": "^0.38.3",
    "eslint": "^9.17.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ravenwolf-org/gitea-action-release-changelog-builder"
  },
  "keywords": [
    "actions",
    "changelog",
    "release-notes",
    "release",
    "gitea",
    "github",
    "multi-provider"
  ],
  "author": "ravenwolf.org",
  "license": "Apache-2.0"
}

